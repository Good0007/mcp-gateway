{
  "name": "@mcp-agent/server",
  "version": "1.0.0",
  "description": "HTTP API Server for MCP Agent GUI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:full": "concurrently -n \"server,web\" -c \"blue,green\" \"bun run dev\" \"cd ../web && bun run dev\"",
    "build": "tsc",
    "postbuild": "mkdir -p public && cp -r ../web/dist/* public/ 2>/dev/null || true",
    "start": "NODE_ENV=production node dist/index.js",
    "clean": "rm -rf dist public",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@mcp-agent/core": "workspace:*",
    "@mcp-agent/shared": "workspace:*",
    "hono": "^4.6.14",
    "@hono/node-server": "^1.14.8",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "concurrently": "^9.2.1",
    "tsx": "^4.19.2"
  }
}
