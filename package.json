{
  "name": "mcp-gateway-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "MCP Gateway Monorepo",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "bun run --filter @mcp-gateway/server dev:full",
    "build": "bun run --filter '*' build",
    "build:core": "bun run --filter @mcp-gateway/core build",
    "build:shared": "bun run --filter @mcp-gateway/shared build",
    "build:server": "bun run --filter @mcp-gateway/server build",
    "build:cli": "bun run --filter @mcp-gateway/cli build",
    "build:web": "bun run --filter @mcp-gateway/web build",
    "build:full": "bun run build:shared && bun run build:core && bun run build:web && bun run build:server && bun run copy:web",
    "copy:web": "mkdir -p packages/server/public && cp -r packages/web/dist/* packages/server/public/",
    "dev:web": "bun run --filter @mcp-gateway/web dev",
    "dev:server": "bun run --filter @mcp-gateway/server dev",
    "dev:cli": "bun run --filter @mcp-gateway/cli dev",
    "start": "cd packages/server && bun run start",
    "clean": "bun run --filter '*' clean",
    "typecheck": "bun run --filter '*' typecheck",
    "test": "bun run --filter '*' test",
    "fix:shared": "bun x eslint packages/shared/src --fix",
    "fix:core": "bun x eslint packages/core/src --fix",
    "fix:server": "bun x eslint packages/server/src --fix",
    "fix:web": "bun x eslint packages/web/src --fix",
    "fix:cli": "bun x eslint packages/cli/src --fix"
  },
  "keywords": [
    "mcp",
    "xiaozhi",
    "gateway",
    "proxy",
    "model-context-protocol"
  ],
  "author": "",
  "license": "SEE LICENSE IN LICENSE",
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "dotenv": "^17.3.1",
    "eslint": "^10.0.0",
    "globals": "^17.3.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.56.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
