{
  "name": "mcp-agent",
  "version": "0.1.0",
  "description": "MCP代理服务，支持动态加载多个MCP服务接入小智AI",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "mcp-agent": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "prebuild": "bun run clean",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "xiaozhi",
    "agent",
    "proxy",
    "model-context-protocol"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "ws": "^8.18.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8",
    "winston": "^3.14.2",
    "execa": "^8.0.1",
    "chokidar": "^3.6.0",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/node": "^20.14.15",
    "@types/ws": "^8.5.12",
    "typescript": "~5.5.4",
    "tsx": "^4.17.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-jest": "^29.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
